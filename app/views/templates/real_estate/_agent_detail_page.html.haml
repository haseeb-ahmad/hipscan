#main
  #header1= link_to image_tag(field_value(:logo) || '/images/templates/realestate/logo.png'), root_path
  #content1
    .title-outer
      .title Agent Detail Page
    .center= image_tag(photo) if (photo = field_value(:agent_photo)).present?
    %h1= field_value(:agent_detail_name)
    %p= field_value(:agent_detail_title)
    %p
      %span> e
      = mail_to field_value(:agent_detail_email)
    %p
      %span> t
      = link_to f = field_value(:agent_phone_number) || '', "tel:#{f}"
    %p
      %span> m
      = link_to f = field_value(:agent_phone_mobile_number) || '', "tel:#{f}"
    %p
      %span -
    %p
      = field_value(:agent_specialties)
    %p
      %span office
      = field_value(:agent_office_address)
  #footer
    .previous.flot-left{:style => "width:40%;"}= link_to 'Previous', template_path(@qr)
    .buttons.flot-right{:style => "width:40%"}= link_to 'Next', ''
    .clear
