.login-page
  .flash= flash[:alert]
  = form_tag new_user_session_path do
    %p
      = label_tag 'user[username]', 'Username'
      %br
      = text_field_tag 'user[username]'
    %p
      = label_tag 'user[password]', 'Password'
      %br
      = password_field_tag 'user[password]'
    %p
      = check_box_tag 'user[remember_me]'
      = label_tag 'user[remember_me]', 'Remember me'
    %br
    %p
      .signup-button{:style => "text-align: center; display: inline-block; margin-right: 30px;"}= link_to 'Login', 'javascript: $("form").submit();'
      = link_to "Forgot your password?", new_password_path('user')
    %br
    .hr
    %br

