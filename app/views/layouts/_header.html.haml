#header
  .fr{:style => 'padding-top: 5px; font-size: 15px'}
    %ul.hmenu
      - if current_user
        %li
          Hi,
          %span.hipscan #{current_user.username}!
          &nbsp;
          
        %li= link_to('Sign out', destroy_user_session_path)

      - else
        %li
          Already have a <span class='hipscan'>Hipscan</span>?
          = link_to 'Sign in', new_user_registration_path


      - if current_user
        %div{:style => 'text-align: right; margin-top:5px; font-size:11px'}
          Account Type:
          %b= current_user.account_type

  = link_to image_tag('hipscan-logo.png'), root_path

  - unless notice.blank?
    .flash_notice= raw notice

  - unless alert.blank?
    .flash_alert
      = raw alert

  .hr

