#header
  .fr
    %ul.hmenu
      - if current_user
        %li{:style => 'margin-top: 6px;'}
          Hi,
          %span.hipscan= link_to "#{current_user.username}!", account_path, :style => 'color: #f06d2e;'
          &nbsp;
          
        %li{:style => 'margin-top: 6px;'}= link_to('Sign out', destroy_user_session_path)

      - else
        %li
          Already have a Hipscan?
        %li
          = link_to image_tag('sign-in-button.png'), new_user_session_path
    - if current_user
      %div{:style => 'text-align: right; margin-top:5px; font-size:11px; color: #333;'}
        Account Type:
        %b= current_user.subscription_plan
        - if current_user.subscription_plan =~ /^Basic/
          %br
          = link_to "Upgrade", plan_account_path, :style => 'color: #f06d2e; margin-right: 3px'
  .fr
    %ul.tmenu
      - unless logged_in?
        %li= link_to "Plans and Pricing", plans_path
        |
      %li= link_to "Hipscan QR University", "/qr-uni"
      |
      %li= link_to "Blog", "http://blog.hipscan.com"
  - unless logged_in?
    .toll-free 
      Toll-Free 
      .orange 855-438-4477    
        
  = link_to image_tag('hipscan-logo.png', :style => 'margin-top: 4px;'), root_path

  - unless notice.blank?
    .flash_notice= raw notice

  - unless alert.blank?
    .flash_alert= raw alert

  .hr
  
  - if controller.controller_path.starts_with?('saas_admin')
    %li= link_to('Subscriptions', saas_admin_subscriptions_path)
    %li= link_to('Accounts', saas_admin_accounts_path)
    %li= link_to('Plans', saas_admin_subscription_plans_path)
    %li= link_to('Discounts', saas_admin_subscription_discounts_path)
    %li= link_to('Affiliates', saas_admin_subscription_affiliates_path)
    %li= link_to("Log out #{current_user.email}", destroy_user_session_path)