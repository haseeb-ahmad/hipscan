%html
  %head
    %title= APP_CONFIG[:site_name]
    = stylesheet_link_tag 'application'
    /[if IE 6]
      = stylesheet_link_tag 'ie6'


    = javascript_include_tag :defaults, "http://connect.facebook.net/en_US/all.js#xfbml=1", 'jquery.printElement.min', 'jquery.bpopup-0.5.1.min'
    = csrf_meta_tag
    <meta property="og:title" content="hipscan" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="" />
    <meta property="og:image" content="http://hipscan.castellucci.us/images/rails.png" />
    <meta property="og:site_name" content="hipscan" />
    <meta property="fb:admins" content="1267856439" />

  %body
    #page-background
      = image_tag @background_image || 'backgrounds/canvas-QRcode-mega.gif', :width => '100%', :height => '100%'
      -#<img src="http://www.quackit.com/pix/milford_sound/milford_sound.jpg" width="100%" height="100%" alt="Smile">

    #facebook_layout
      = render :partial => 'layouts/header'

      #content

        = yield

      = render :partial => 'layouts/footer'

    = render :partial => 'layouts/google_analytics'
