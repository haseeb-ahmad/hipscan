#registration
  %table.twocol
    %tr
      %td{:style => 'border-right: 2px solid #f36d21; padding-right: 20px'}
        %h1 Sign up
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = devise_error_messages!
          %p
            = f.label :username
            %br
            = f.text_field :username
          %p
            = f.label :email
            %br
            = f.email_field :email
          %p
            = f.label :password
            %br
            = f.password_field :password
          %p
            = f.label :password_confirmation
            %br
            = f.password_field :password_confirmation
          %p= f.submit "Sign up"



      %td{:style => 'padding-left: 60px'}
        %h1 Sign in

        = form_tag new_user_session_path do
          %p
            = label_tag 'user[username]', 'Username'
            %br
            = text_field_tag 'user[username]'
          %p
            = label_tag 'user[password]', 'Password'
            %br
            = password_field_tag 'user[password]'
          %p
            = check_box_tag 'user[remember_me]'
            = label_tag 'user[remember_me]', 'Remember me'
          %br
          %p
            %button Login
            = link_to "Forgot your password?", new_password_path('user')

          %br
          .hr
          %br

          %h2 or, sign in with

          .social_connect= link_to image_tag('icons/FaceBook_icon_32x32.png'), user_omniauth_authorize_path(:facebook)
          .social_connect= link_to image_tag('icons/twitter-icon-32x32.png'), user_omniauth_authorize_path(:twitter)
          .social_connect= link_to image_tag('icons/linkedin_icon_32.png'), user_omniauth_authorize_path(:linked_in)
          .social_connect= link_to image_tag('icons/google32.png'), user_omniauth_authorize_path(:google)

